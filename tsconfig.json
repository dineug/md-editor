{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@type/*": ["types/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "types/**/*.ts"],
  "exclude": ["node_modules"]
}
